<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wenke.makelove.bottomtabexample.MainActivity">

    <Button
        android:layout_marginTop="20dp"
        style="@style/btn_style"
        android:layout_marginBottom="20dp"
        android:text="TabLayoutAsIndicator"
        android:textSize="15dp"
        android:id="@+id/tabLayoutAsIndicator"
        />
    <Button
android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        style="@style/btn_style"
        android:layout_marginBottom="20dp"
android:textSize="15sp"
        android:text="TabLayoutAsBottomBar"
        android:id="@+id/tabLayoutAsBottomBar"
        />
    <Button
        android:layout_above="@+id/bottomNavigationBarV"
        android:layout_centerInParent="true"
        style="@style/btn_style"
        android:text="BottomNavigationBarF"
        android:id="@+id/bottomNavigationBarF"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:layout_centerInParent="true"

        style="@style/btn_style"
        android:text="BottomNavigationBarV"
        android:id="@+id/bottomNavigationBarV"
      />

    <Button
        style="@style/btn_style"
        android:text="FragmentTabHostV"
        android:id="@+id/fragmentTabHostV"
        android:layout_above="@+id/radioViewPager"
        android:layout_marginBottom="20dp"
      />
    <Button
        android:layout_alignParentRight="true"
        android:text="FragmentTabHostF"
        style="@style/btn_style"
        android:id="@+id/fragmentTabHostF"
        android:layout_above="@+id/radioFrameLayout"
        android:layout_marginBottom="20dp"
     />
    <Button
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:text="RadioViewPager"
        style="@style/btn_style"
        android:id="@+id/radioViewPager"
      />
    <Button
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="RadioFrameLayout"
        android:id="@+id/radioFrameLayout"
        style="@style/btn_style"
        />
</RelativeLayout>
