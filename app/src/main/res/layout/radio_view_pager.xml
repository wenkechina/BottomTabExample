<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/viewPager"
        android:layout_height="0dp"/>
    <RadioGroup
        android:id="@+id/radioGroupBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_homepage"
            style="@style/radioStyle"
            android:checked="true"
            android:drawableTop="@drawable/tab_home_selector_homepage"
            android:text="首页"/>
        <RadioButton
            android:id="@+id/rb_acount"
            style="@style/radioStyle"
            android:drawableTop="@drawable/tab_home_selector_account"
            android:text="我的账户"/>
        <RadioButton
            android:id="@+id/rb_more"
            style="@style/radioStyle"
            android:drawableTop="@drawable/tab_home_selector_more"
            android:text="更多"/>
    </RadioGroup>
</LinearLayout>
